#include <iostream>
using namespace std;

void s_avg(){
    int sum = 0,i = 0,n;
    while (true)
    {   
        cout << "자연수를 입력하세요 : ";
        cin >> n;
        if(n>=100){
            sum+=n;
            i++;
            cout << "합계 : "<< sum << endl;
            cout << "평균 : "<< sum/i << endl;
            break;
        }
        sum+=n;
        i++;
    }

}

int main(){
    s_avg();
    
    return 0;
}
